/**index.wxss**/
page{
  background: #f7fbfc;
}

.search-btn {
  color:#fff;
}

.search-btn:active {
  color:#6e9bcc;
}

.other-search {
  display: flex;
  padding-bottom:10px;
}

.other-search-body {
  font-size: 14px;
  color: #fff;
  width: 50%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header {
  background: #6e9bcc;
}

.header-tab {
  font-size: 16px;
  padding: 5px 14px;
}

.header-center {
  text-align: center;
}
.header-title {
  font-size: 10px;
  color: #fff;
}

.center-body {
  background-color: rgb(247, 251, 252, 0.8);
  font-weight: 700;
  font-size: 15px;
  height: 450px;
}

.choose-box {
  display:flex;
  align-items: center; 
  justify-content: center;

}

.image-box {
  width: 75%;
  margin:80rpx 12.5% 0 12.5%;
  display:flex;
  align-items: center; 
  justify-content: center;
  background-color: rgb(255, 255, 255, .9);
  border-radius: 30rpx;
  padding: 30rpx 0;
  box-shadow:  0px 0px 5px #999;
}

.login{
  position: fixed;
  width:50px;
  height:50px;
  bottom: 60px;
  right: 10px;
  border-radius: 50px;
  background: #6e9bcc;
  box-shadow: 3px 3px 3px #999;
  color: #fff;
  font-weight: 700;
  font-size: 13px;
  line-height: 50px;
  text-align: center;
  z-index: 999;
  padding: 0;
}

button::after {
  border: 0px solid rgba(0,0,0,.2);
}

.background-image {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  z-index: -999;
}
