/* pages/editPost/editPost.wxss */
.head {
  height: 40px;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cancel {
  color: #999;
  font-size: 34rpx;
  margin-left: 20rpx;
}

.issue {
  margin-right: 20rpx;
}

button {
  width: 50px;
  background-color: #d8e4f4;
  border-radius: 30px;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  padding: 10rpx 0;
  line-height: 1.3;
}

button::after {
  border: 0px solid rgba(0,0,0,.2);
}

.buttonCheckde {
  background-color: #6e9bcc;
}

.title {
  width: 92%;
  margin:30rpx auto;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.content {
  width: 92%;
  margin:30rpx auto;
}

.content textarea {
  min-height: 100px;
  font-size: 35rpx;
}
.add-image {
  width: 92%;
  margin:30rpx auto;
}

.bottom {
  position: fixed;
  bottom:0;
  height: 40px;
  width: 100%;
  color: #fff;
  text-align: right;
  background-color: #d8e4f4;
  line-height: 40px;
  z-index: 9999;
}

.bottom text {
  padding-right: 20rpx;
  font-size: 35rpx;
}
