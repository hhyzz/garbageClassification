/* pages/login/login.wxss */
page{
    background-color: #d8e4f4;
}

.container {
  height: 500px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
  background-color: rgb(216, 228, 244, 0.8);
} 

.title-text{
    font-family: "微软雅黑";
    font-size: 60rpx;
    font-weight: bold;
    color: #393e46;
    margin-bottom:30rpx; 
}

.login-box{
    padding: 60rpx 40rpx;
    padding-bottom: 120rpx;
    width: 80%;
    min-height: 400rpx;
    background-color: #f7fbfc;
    border-radius: 5px;
    box-shadow: 0 0 20rpx rgba(1,1,1,0.5);
}

.list-title{
    font-family: '微软雅黑';
    font-size: 36rpx;
    font-weight: bold;
    color:#393e46;
}

input{
    padding: 0px 20rpx;
    font-size: 28rpx;
    font-family: '微软雅黑';
    padding-top:20rpx;
    margin-bottom: 40rpx;
    border-bottom: 1px solid #ADADAD;
}

.btn {
    width: 48%;
    margin-top:80rpx;
    margin-bottom: 20rpx;
    float: left;
    font-size: 38rpx;
    font-weight: bold;
    box-shadow: 0 0 20rpx rgba(1,1,1,0.3);
}

.login-btn{
    background-color:#6e9bcc;
    color: #fff;
}

.login-btn:active{
    background-color: #517ead;
}

.register-btn {
    background-color:#eee;
    color: #51545a;
}

.register-btn:active{
    background-color: #e1e4e7;
}

.link{
    margin-top: 20rpx;
    color:#888888;
    font-size: 11pt;
}

.verification {
  padding-top: 40rpx;
}

.verification input {
  width: 50%;
  float: left;
  margin-right: 20rpx;
}

.verification button {
  width: 40%;
  font-size: 32rpx;
  background-color:#6e9bcc;
  color: #fff;
  float: left;
}

.verification button:active{
    background-color: #517ead;
}

.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:rgb(153, 153, 153, 0.5);
  z-index:9999;
  top:0;
  left:0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top: 150rpx;
}

.hiddenMask {
  width: 50rpx;
  height: 50rpx;
  float: right;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
  border-radius: 50rpx;
  font-size: 45rpx;
  border:3rpx solid #51545a;
  color: #51545a;
}

.verification-box {
    padding: 60rpx 40rpx;
    padding-bottom: 120rpx;
    width: 80%;
    min-height: 400rpx;
    background-color: #f7fbfc;
    border-radius: 5px;
    box-shadow: 0 0 20rpx rgba(1,1,1,0.5); 
}

.verificationButton{
    width: 100%;
    margin-top: 50rpx;
    font-size: 38rpx;
    font-weight: bold;
    box-shadow: 0 0 20rpx rgba(1,1,1,0.3);
    background-color:#6e9bcc;
    color: #fff;
    float: left
}

.verificationButton:active{
    background-color: #517ead;
}

.background-image {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  z-index: -999;
  background-color: rgb(255, 255, 255, .7);
}